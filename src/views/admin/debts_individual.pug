- var title = 'Debts'

doctype html
html
	head
		include ./head.pug
	body
		div(class='ui container')
			include ./header.pug
			include ./menu.pug
			h2(class="ui header")
				= debtor.name
				div(class="sub header")
					- var total = 0; for(i=0;i<debts.length; i++){total+=debts[i].amount};
					="Total Debt: £" + (total/100).toFixed(2)
			div(class="ui vertically padded grid")
				div(class="ten wide column")
					h3(class="ui header") Debt History
					table(class="ui fixed table")
						thead
							tr
								th Name
								th Message
								th Timestamp
								th Amount
						tbody
							each debt in debts
								tr
									td= debt.name
									td= debt.message
									td= debt.debt_added
									td= "£"+(debt.amount/100).toFixed(2)
				div(class="six wide column")
					h3(class="ui header") Add Debt
					form(class="ui form" method="POST" action="/admin/debts/"+debtor.username)
						div(class="field")
							label Name
							input(type="text" name="name")
						div(class="field")
							label Message
							textarea(rows=2 name="message")
						div(Class="field")
							label Amount
							input(type="text" name="amount")
						div(Class="ui error message")

						button(class="ui submit button" type="submit") Add

	script.
		$('.ui.form').form({
			inline: true,
			fields: {
				name: {
					identifier: 'name',
					rules: [
						{
							type: 'empty',
							prompt: 'Please enter a name'
						}
					]
				},
				amount: {
					identifier: 'amount',
					rules: [
						{
							type: 'empty',
							prompt: 'Please enter an amount'
						},
						{
							type: 'number',
							prompt: 'Please enter an amount in pounds'
						}
					]
				}
			}
		});
